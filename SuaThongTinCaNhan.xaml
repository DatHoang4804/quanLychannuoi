<Window x:Class="QuanLyChanNuoi.SuaThongTinCaNhan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyChanNuoi"
        mc:Ignorable="d"
        Title="Sửa thông tin cá nhân" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Họ và Tên:" FontFamily="Sans Serif Collection" FontSize="25" Margin="10 0 10 10 " />
            <TextBox x:Name="txtHoTen" FontFamily="Sans Serif Collection" FontSize="25" BorderThickness="5" Margin="10 0 10 10 "/>

            <TextBlock Text="Email:"  FontFamily="Sans Serif Collection" FontSize="25" Margin="10 0 10 10 " />
            <TextBox x:Name="txtEmail"  FontFamily="Sans Serif Collection" FontSize="25" BorderThickness="5" Margin="10 0 10 10"/>

            <Button Content="Lưu" Click="BtnLuu_Click"  Background="#89CFF0" Width="135" Margin="0 20 0 0" FontFamily="Sans Serif Collection" FontSize="25" HorizontalContentAlignment="Center" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
