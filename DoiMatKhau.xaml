<Window x:Class="QuanLyChanNuoi.DoiMatKhau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyChanNuoi"
        mc:Ignorable="d"
        Title="Đổi mật khẩu" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
        <StackPanel>
            <TextBlock Text="Mật khẩu cũ:" FontFamily="Sans Serif Collection" FontSize="25" Margin="10 0 10 10 " />
            <TextBox x:Name="mkcu1" FontFamily="Sans Serif Collection" FontSize="25" BorderThickness="5" Margin="10 0 10 10 "/>

            <TextBlock Text="Mật khẩu mới:"  FontFamily="Sans Serif Collection" FontSize="25" Margin="10 0 10 10 " />
            <PasswordBox x:Name="mkmoi1"  FontFamily="Sans Serif Collection" FontSize="25" BorderThickness="5" Margin="10 0 10 10"/>
            <TextBlock Text="Nhập lại mật khẩu mới:"  FontFamily="Sans Serif Collection" FontSize="25" Margin="10 0 10 10 " />
            <PasswordBox x:Name="mkmoi2"  FontFamily="Sans Serif Collection" FontSize="25" BorderThickness="5" Margin="10 0 10 10"/>
            <Button Content="Lưu" Click="BtnLuu2_Click"  Background="#89CFF0" Width="135" Margin="0 20 0 0" FontFamily="Sans Serif Collection" FontSize="25" HorizontalContentAlignment="Center" HorizontalAlignment="Right"/>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
